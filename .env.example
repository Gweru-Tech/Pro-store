# NtandoStore v7 Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:00000/Ladybug2017

# Session Configuration
SESSION_SECRET=ntandostore-v7-secret-key-2024-very-secure

# JWT Configuration
JWT_SECRET=ntandostore-jwt-secret-key-2024

# Email Configuration (for notifications)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_SERVICE=gmail

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=public/uploads

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Admin Configuration (for initialization)
ADMIN_USERNAME=Ntando
ADMIN_PASSWORD=Ntando
ADMIN_EMAIL=admin@ntandostore.com

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
FACEBOOK_PIXEL_ID=YOUR_FACEBOOK_PIXEL_ID

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ntandostore-uploads

# Payment Configuration (optional)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# SMS Configuration (optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Social Media Configuration
FACEBOOK_APP_ID=your-facebook-app-id
TWITTER_API_KEY=your-twitter-api-key
INSTAGRAM_CLIENT_ID=your-instagram-client-id

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Website is under maintenance. Please check back soon.

# Development Configuration
DEBUG=ntandostore:*
LOG_LEVEL=info

# Production Configuration (uncomment for production)
# NODE_ENV=production
# PORT=80
# MONGODB_URI=mongodb://your-production-db-url
# SESSION_SECRET=your-production-session-secret
# JWT_SECRET=your-production-jwt-secret
